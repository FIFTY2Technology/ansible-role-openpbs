---

extends: default

yaml-files:
  - '*.yaml'
  - '*.yml'
  - '.yamllint'

ignore: |
  .cache/
  env/
  venv/

rules:
  line-length: disable
  empty-lines:
    max-end: 1
    level: error
  new-line-at-end-of-file: enable
  indentation:
    spaces: 2
  octal-values:
    forbid-implicit-octal: true

